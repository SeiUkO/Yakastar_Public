    users = forms.ForeignKey(Users, on_delete = forms.CASCADE)
    assos = forms.ForeignKey(Assos, null = True, on_delete = forms.CASCADE)

    name = forms.CharField(max_length=200)
    date_time = forms.DateTimeField('date_time')
    end_time = forms.TimeField(auto_now=False)
    begin_time = forms.TimeField(auto_now=False)

    recurrence = forms.BooleanField(default = False)
    frequence = forms.IntegerField()
    until = forms.DateField()
    responsible = forms.CharField(max_length=64)
    responsible_phone = forms.CharField(max_length = 64)
    responsible_class = forms.CharField(max_length = 64)
    nb_days = forms.IntegerField()
    tutor_name = forms.CharField(max_length = 64)
    tutor_phone = forms.CharField(max_length = 64)
    tutor_job = forms.CharField(max_length = 64)
    nb_ionis_student = forms.IntegerField()
    nb_members = forms.IntegerField()
    nb_externs = forms.IntegerField()
    description = forms.CharField(max_length = 200, default = 'short description')
    civil_liability = forms.BooleanField(default = False)
    place = forms.CharField(max_length = 64)
    rooms = forms.CharField(max_length = 200)
    material = forms.CharField(max_length = 200)
    drinks = forms.IntegerField()
    comment = forms.CharField(max_length = 200, default = 'some text')

    status = forms.CharField(max_length = 200, default = 'pending')
